FROM debian:stable
MAINTAINER Chris Kleeschulte <chrisk@bitpay.com>
WORKDIR /var/lib
RUN DEBIAN_FRONTEND=noninteractive apt-get update && \
apt-get --no-install-recommends -yq install \
git-core \
ca-certificates \
ruby \
openssh-client \
rsync
RUN mkdir -p ssh_keys
RUN ssh-keygen -t rsa -N '' -f ssh_keys/id_rsa

